    <ImageView
        android:id="@+id/img_fruits"
        android:layout_width="154dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="img_btn_fruits"
        app:layout_constraintBottom_toTopOf="@+id/txt_wafferGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toEndOf="@+id/img_veggie"
        app:layout_constraintTop_toBottomOf="@+id/txt_fruitGroup"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@drawable/waffer" />

    <TextView
        android:id="@+id/txt_wafferGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Waffers"
        android:textColor="#000000"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_veggie" />

    <ImageView
        android:id="@+id/img_milk"
        android:layout_width="154dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        tools:src="@drawable/milk"
        android:onClick="img_btn_milk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_milkGroup" />

    <ImageView
        android:id="@+id/img_waffers"
        android:layout_width="154dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:onClick="img_btn_waffer"
        app:layout_constraintBottom_toTopOf="@+id/img_offer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toEndOf="@+id/img_milk"
        app:layout_constraintTop_toBottomOf="@+id/txt_wafferGroup"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@drawable/waffer" />
<!--img_fruits-->

    <ImageView
        android:id="@+id/img_veggie"
        android:layout_width="154dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
